Sub replaceMultiSpaces()
    Dim rng As Range
    Dim replaced As Boolean
    Set rng = ActiveDocument.Content
    Do
        replaced = False
        With rng.Find
            .ClearFormatting
            .Text = "  "
            .Replacement.Text = " "
            .Forward = True
            .Wrap = wdFindContinue
            .Format = False
            .MatchCase = False
            .MatchWholeWord = False
            .MatchWildcards = False
            .MatchSoundsLike = False
            .MatchAllWordForms = False
            Do While .Execute
                rng.Text = Replace(rng.Text, "  ", " ")
                replaced = True
            Loop
        End With
        rng.Collapse wdCollapseEnd
    Loop While replaced
End Sub

Sub xoaBulletPlus()
    Selection.Find.ClearFormatting
    Selection.HomeKey Unit:=wdLine
    Selection.Find.Text = "+"
    Selection.Find.Execute
    Selection.MoveEnd wdCharacter, 1
    If Selection.Find.found = True Then
        If Selection.Information(wdFirstCharacterColumnNumber) = 1 Then
        Selection.Delete
        Else
         Selection.MoveRight wdCharacter, 10
        End If
    End If
End Sub

Sub themBulletPlus()
    With ListGalleries(wdBulletGallery).ListTemplates(1).ListLevels(1)
        .NumberFormat = "+"
        .TrailingCharacter = wdTrailingTab
        .NumberStyle = wdListNumberStyleBullet
        .NumberPosition = InchesToPoints(0)
        .Alignment = wdListLevelAlignLeft
        .TextPosition = InchesToPoints(0)
        .tabPosition = wdUndefined
        .ResetOnHigher = 0
        .StartAt = 1
        With .Font
            .Size = 10
            .Name = "Arial"
        End With
        .LinkedStyle = ""
    End With
    ListGalleries(wdBulletGallery).ListTemplates(1).Name = ""
    Selection.Range.ListFormat.ApplyListTemplateWithLevel ListTemplate:= _
        ListGalleries(wdBulletGallery).ListTemplates(1), ContinuePreviousList:= _
        False, ApplyTo:=wdListApplyToWholeList, DefaultListBehavior:= _
        wdWord10ListBehavior
End Sub

Sub canChinhBang()
'Autofit + Center
    With Selection.Tables(1)
        .AllowPageBreaks = True
        .AllowAutoFit = True
    End With
    Selection.SelectCell
    Selection.Cells.VerticalAlignment = wdCellAlignVerticalCenter
    Selection.Tables(1).AutoFitBehavior (wdAutoFitWindow)
End Sub

Sub indent()
'indent + tab
    With Selection.ParagraphFormat
        .FirstLineIndent = InchesToPoints(0)
    End With
    With Selection.ParagraphFormat
        .LeftIndent = InchesToPoints(0)
    End With
    Dim selRange As Range
    Set selRange = Selection.Range
    Dim tabPosition As Double
    tabPosition = InchesToPoints(0.30)
    Dim para As Paragraph
    For Each para In selRange.Paragraphs
        para.TabStops.Add tabPosition, wdAlignTabLeft, wdTabLeaderSpaces
    Next para
End Sub

Sub xuLyDuLieuXuongDong()
    Dim rng As Range
    Dim arr() As String
    Dim lineCount As Integer
    Dim i As Integer
    
    Set rng = Selection.Range
    lineCount = rng.ComputeStatistics(wdStatisticLines)
    ReDim arr(0 To (lineCount - 1))
    For i = 0 To lineCount - 1
        arr(i) = rng.Paragraphs(i + 1).Range.Text
    Next i
    For i = 0 To (UBound(arr) + 1) / 2 - 1
        Selection.TypeText (arr(i) & " " & arr(((UBound(arr) + 1) / 2) + i))
    Next i
    Set rng = Nothing
    Selection.MoveUp Unit:=wdLine, count:=(UBound(arr) + 1)
    For i = 1 To ((UBound(arr) + 1) / 2)
    Selection.EndKey Unit:=wdLine
    Selection.Delete Unit:=wdCharacter, count:=1
    Selection.MoveDown Unit:=wdLine, count:=1
    Next i
End Sub

Sub laMa()
    'Danh numbering so La Ma
    With ListGalleries(wdNumberGallery).ListTemplates(1).ListLevels(1)
        .NumberFormat = "%1."
        .TrailingCharacter = wdTrailingTab
        .NumberStyle = wdListNumberStyleUppercaseRoman
        .NumberPosition = InchesToPoints(0.25)
        .Alignment = wdListLevelAlignLeft
        .TextPosition = InchesToPoints(0.5)
        .tabPosition = wdUndefined
        .ResetOnHigher = 0
        .StartAt = 1
        With .Font
            .Name = ""
        End With
        .LinkedStyle = ""
    End With
    ListGalleries(wdNumberGallery).ListTemplates(1).Name = ""
    Selection.Range.ListFormat.ApplyListTemplateWithLevel ListTemplate:= _
        ListGalleries(wdNumberGallery).ListTemplates(1), ContinuePreviousList:= _
        True, ApplyTo:=wdListApplyToWholeList, DefaultListBehavior:= _
        wdWord10ListBehavior
End Sub

Sub xoavbTab ()
    With Selection.Find
        .Text = vbTab
        .Replacement.Text = " "
        .Forward = True
        .Wrap = wdFindContinue
    End With
    Selection.Find.Execute Replace:=wdReplaceAll
End Sub

Sub tableHNX()
'All: Autofit; vertical allign center; autofit content
    Dim tbl As Table
    For Each tbl In ActiveDocument.Tables
        tbl.AutoFitBehavior (wdAutoFitWindow)
        tbl.Rows.HeightRule = wdRowHeightAuto
        tbl.Rows.AllowBreakAcrossPages = False
        For Each cell In tbl.Range.Cells
            cell.VerticalAlignment = wdCellAlignVerticalCenter
        Next cell
    Next tbl
End Sub

    Selection.WholeStory
    With Selection.ParagraphFormat
        .SpaceBeforeAuto = False
        .SpaceAfterAuto = False
        .WordWrap = True
    End With
End Sub