Sub hlNgayChuaDich()
    Dim rng As Range
    Dim regEx As Object
    Dim match As Object
    Set rng = ActiveDocument.Content
    Set regEx = CreateObject("VBScript.RegExp")
    With regEx
        .pattern = "\b\d{1,2}/\d{1,2}/\d{4}\b" ' (dd/mm/yyyy)
        .Global = True
        .IgnoreCase = True
    End With

    For Each match In regEx.Execute(rng.Text)
        rng.Start = match.FirstIndex
        rng.End = match.FirstIndex + Len(match.Value)
        rng.HighlightColorIndex = wdTurquoise
        rng.Collapse wdCollapseEnd
    Next match
End Sub
Sub replaceSpaces()
    Dim rng As Range
    Dim replaced As Boolean
    Set rng = ActiveDocument.Content
    Do
        replaced = False
      
        With rng.Find
            .ClearFormatting
            .Text = "  "
            .Replacement.Text = " "
            .Forward = True
            .Wrap = wdFindContinue
            .Format = False
            .MatchCase = False
            .MatchWholeWord = False
            .MatchWildcards = False
            .MatchSoundsLike = False
            .MatchAllWordForms = False
            Do While .Execute
                rng.Text = Replace(rng.Text, "  ", " ")
                replaced = True
            Loop
        End With
        rng.Collapse wdCollapseEnd
    Loop While replaced
End Sub
Sub ReplaceFinancialStatements()
    Dim rng As Range

    Set rng = ActiveDocument.Content
    With rng.Find
        .Text = "financial statement "
        .Replacement.Text = "Financial Statements "
        .MatchCase = False
        .MatchWholeWord = False
        .Execute Replace:=wdReplaceAll
    End With
    With rng.Find
        .Text = "financial statements"
        .Replacement.Text = "Financial Statements"
        .MatchCase = False
        .MatchWholeWord = True
        .Execute Replace:=wdReplaceAll
    End With
    With rng.Find
        .Text = "financial statements in 20"
        .Replacement.Text = "Financial Statements 20"
        .MatchCase = False
        .MatchWholeWord = True
        .Execute Replace:=wdReplaceAll
    End With
    With rng.Find
        .Text = "financial statements of 20"
        .Replacement.Text = "Financial Statements 20"
        .MatchCase = False
        .MatchWholeWord = True
        .Execute Replace:=wdReplaceAll
    End With
End Sub
Sub highlightVNDsai()
    Dim doc As Document
    Dim rng As Range
    Dim pattern As String
    Dim regEx As Object
    Dim match As Object
    
    Set doc = ActiveDocument
    Set rng = doc.Content
    rng.WholeStory
    
    ' Define the pattern for matching the word "VND" after a number
    pattern = "(\d+)\sVND"
    
    Set regEx = CreateObject("VBScript.RegExp")
    With regEx
        .Global = True
        .pattern = pattern
    End With
    
    ' Search for matches using the regular expression pattern
    For Each match In regEx.Execute(rng.Text)
        rng.Start = match.FirstIndex
        rng.End = match.FirstIndex + Len(match.Value)
        rng.HighlightColorIndex = wdTurquoise
        rng.Collapse wdCollapseEnd ' Move the range to continue searching
    Next match
    
    Set rng = Nothing
    Set doc = Nothing
    Set regEx = Nothing
End Sub
Sub xuLyDuLieuXuongDong()
    Dim rng As Range
    Dim arr() As String
    Dim lineCount As Integer
    Dim i As Integer
    
    Set rng = Selection.Range
    lineCount = rng.ComputeStatistics(wdStatisticLines)
    ReDim arr(0 To (lineCount - 1))
    For i = 0 To lineCount - 1
        arr(i) = rng.Paragraphs(i + 1).Range.Text
    Next i
    For i = 0 To (UBound(arr) + 1) / 2 - 1
        Selection.TypeText (arr(i) & arr(((UBound(arr) + 1) / 2) + i))
    Next i
    Set rng = Nothing
    Selection.MoveUp Unit:=wdLine, count:=(UBound(arr) + 1)
    For i = 1 To ((UBound(arr) + 1) / 2)
    Selection.EndKey Unit:=wdLine
    Selection.Delete Unit:=wdCharacter, count:=1
    Selection.MoveDown Unit:=wdLine, count:=1
    Next i
End Sub